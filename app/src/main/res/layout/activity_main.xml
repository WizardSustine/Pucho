<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EA1D182C"
    android:backgroundTint="#F120202A"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/notificationswitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Notificaciones"
                android:textColor="#E7DEDE"
                android:textSize="12dp"
                android:textStyle="bold"
                android:trackTint="@drawable/switch_notification" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#05FFFFFF"
                app:srcCompat="@android:drawable/ic_menu_preferences" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|clip_vertical"
            android:text="date"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="163dp"
                android:layout_height="119dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#EBFFFFFF"
                android:textSize="70dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="84dp"
                android:layout_height="126dp"
                android:layout_marginEnd="56dp"
                android:backgroundTint="#DB6161"
                app:srcCompat="@android:drawable/stat_sys_upload" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="98dp"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#F3507A04"
            android:text="+"
            android:textColorHighlight="@color/white"
            android:textSize="60dp" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="378dp"
            android:layout_height="318dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="visible">

        </ListView>

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>